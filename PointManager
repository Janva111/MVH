using TMPro;
using UnityEngine;

public class PointManager : MonoBehaviour
{
    int points = 0;
    public TMP_Text scoreText;
    public GameManager gameManager;
    void Start()
    {
        gameManager = GetComponent<GameManager>();
        scoreText.text = $"Score: {points}";
    }
    public void AddPoint()
    {
        points++;
        if (points >= 3)
        {
            gameManager.LoadMenu();
        }
        scoreText.text = $"Score: {points}";
    }


}
